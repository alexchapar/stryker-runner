{
  "name": "stryker-runner",
  "displayName": "Stryker Runner",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Testing"
  ],
  "extensionKind": [
    "workspace"
  ],
  "keywords": [
    "Stryker",
    "Mutation testing"
  ],
  "preview": true,
  "activationEvents": [
    "workspaceContains:**/{.,}stryker.conf.@(json|js|cjs|mjs)",
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "stryker-runner.run-stryker-on-file",
        "title": "Run Stryker on file"
      },
      {
        "command": "stryker-runner.run-stryker-on-selection",
        "title": "Run Stryker"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname =~ /\\.[tj]s/",
          "command": "stryker-runner.run-stryker-on-file",
          "group": "3_compare"
        }
      ],
      "editor/context": [
        {
          "command": "stryker-runner.run-stryker-on-selection",
          "group": "02_stryker"
        }
      ]
    }
  },
  "configuration": {
    "title": "Stryker Runner",
    "properties": {
      "strykerRunner.stryker.configFile": {
        "type": "string",
        "default": null,
        "description": "Path to a non-standard stryker config file, see: https://stryker-mutator.io/docs/stryker-js/config-file/#usage"
      },
      "strykerRunner.stryker.incremental": {
        "type": "boolean",
        "default": false,
        "description": "Use incremental mode when running Stryker"
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "@vscode/test-electron": "^2.1.5"
  }
}